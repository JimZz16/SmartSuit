    <ImageView
        android:id="@+id/MaxMdot"
        android:layout_width="55dp"
        android:layout_height="10dp"
        android:layout_marginBottom="1000dp"
        android:layout_marginStart="152dp"
        android:alpha="0.4"
        app:layout_constraintBottom_toBottomOf="@+id/Bike"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/redline" />

    <ImageView
        android:id="@+id/MinMdot"
        android:layout_width="55dp"
        android:layout_height="10dp"
        android:layout_marginBottom="1000dp"
        android:layout_marginStart="152dp"
        android:alpha="0.4"
        app:layout_constraintBottom_toBottomOf="@+id/Bike"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/redline" />

    <ImageView
        android:id="@+id/MaxHdot"
        android:layout_width="55dp"
        android:layout_height="10dp"
        android:layout_marginBottom="1000dp"
        android:layout_marginStart="250dp"
        android:alpha="0.4"
        app:layout_constraintBottom_toBottomOf="@+id/Bike"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/redline" />

    <ImageView
        android:id="@+id/MinHdot"
        android:layout_width="55dp"
        android:layout_height="10dp"
        android:layout_marginBottom="1000dp"
        android:layout_marginStart="250dp"
        android:alpha="0.4"
        app:layout_constraintBottom_toBottomOf="@+id/Bike"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/redline" />

    <ImageView
        android:id="@+id/MinCdot"
        android:layout_width="55dp"
        android:layout_height="10dp"
        android:layout_marginBottom="1000dp"
        android:layout_marginStart="201dp"
        android:alpha="0.4"
        app:layout_constraintBottom_toBottomOf="@+id/Bike"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/redline" />

    <ImageView
        android:id="@+id/MaxCdot"
        android:layout_width="55dp"
        android:layout_height="10dp"
        android:layout_marginBottom="1000dp"
        android:layout_marginStart="201dp"
        android:alpha="0.4"
        app:layout_constraintBottom_toBottomOf="@+id/Bike"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/redline" />

    <ImageView
        android:id="@+id/BaselineM"
        android:layout_width="55dp"
        android:layout_height="10dp"
        android:layout_marginBottom="275dp"
        android:layout_marginStart="90dp"
        android:alpha="0.30"
        app:layout_constraintBottom_toBottomOf="@+id/Bike"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/blackline" />

    <ImageView
        android:id="@+id/Midbackdot"
        android:layout_width="55dp"
        android:layout_height="10dp"
        android:layout_marginBottom="275dp"
        android:layout_marginStart="90dp"
        app:layout_constraintBottom_toBottomOf="@+id/Bike"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/blackline" />

    <ImageView
        android:id="@+id/C7dot"
        android:layout_width="55dp"
        android:layout_height="10dp"
        android:layout_marginBottom="290dp"
        android:layout_marginStart="147dp"
        app:layout_constraintBottom_toBottomOf="@+id/Bike"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/blackline" />

    <ImageView
        android:id="@+id/BaselineC"
        android:layout_width="55dp"
        android:layout_height="10dp"
        android:layout_marginBottom="290dp"
        android:layout_marginStart="147dp"
        android:alpha="0.30"
        app:layout_constraintBottom_toBottomOf="@+id/Bike"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/blackline" />

    <ImageView
        android:id="@+id/Headdot"
        android:layout_width="55dp"
        android:layout_height="10dp"
        android:layout_marginBottom="300dp"
        android:layout_marginStart="204dp"
        app:layout_constraintBottom_toBottomOf="@+id/Bike"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/blackline" />

    <ImageView
        android:id="@+id/BaselineH"
        android:layout_width="55dp"
